<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".RegisterActivity" android:background="@color/ColorAzulPrincipal">

    <de.hdodenhof.circleimageview.CircleImageView  xmlns:app="http://schemas.android.com/apk/res-auto"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_height="200dp" android:layout_width="200dp" android:layout_marginTop="50dp"
            android:layout_marginStart="40dp" android:layout_marginEnd="40dp"
            android:src="@drawable/usuarioimagen" android:id="@+id/circleImageView"/>

    <Button
            android:text="@string/txtLogin"
            android:layout_width="200dp"
            android:layout_height="60dp" android:id="@+id/btnLogin"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498" android:layout_marginTop="60dp"
            app:layout_constraintTop_toBottomOf="@+id/txtContrasena"
            android:background="@color/ColorAmarilloPrincipal"/>
    <EditText
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:inputType="textPassword"
            android:ems="10"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/txtContrasena"
            android:hint="@string/txtContrasena" android:layout_marginTop="35dp"
            app:layout_constraintTop_toBottomOf="@+id/txtLogin" android:background="@android:color/background_light"/>
    <EditText
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:inputType="textEmailAddress"
            android:ems="10"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/txtLogin"
            android:hint="@string/txtNombreDeUsuario" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/textView" android:background="@android:color/background_light"/>
    <TextView
            android:text="@string/txtInicioDeSesion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:id="@+id/textView"
            android:layout_marginTop="38dp" app:layout_constraintTop_toBottomOf="@+id/circleImageView"
            android:textSize="30sp"/>
</androidx.constraintlayout.widget.ConstraintLayout>